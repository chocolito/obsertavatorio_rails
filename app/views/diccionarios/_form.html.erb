<%= form_for @diccionario, :html => { :class => "form-horizontal diccionario" } do |f| %>

    <% if @diccionario.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@diccionario.errors.count, "error") %> prohibited this diccionario from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @diccionario.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :terminos, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :terminos, :class => 'form-control' %>
    </div>
    <%= error_span(@diccionario[:terminos]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            diccionarios_path, :class => 'btn btn-default' %>

<% end %>
