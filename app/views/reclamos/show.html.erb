<%- model_class = Reclamo -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:idTweet) %>:</strong></dt>
  <dd><%= @reclamo.idTweet %></dd>
  <dt><strong><%= model_class.human_attribute_name(:idCompania) %>:</strong></dt>
  <dd><%= @reclamo.idCompania %></dd>
  <dt><strong><%= model_class.human_attribute_name(:tipo) %>:</strong></dt>
  <dd><%= @reclamo.tipo %></dd>
  <dt><strong><%= model_class.human_attribute_name(:servicio) %>:</strong></dt>
  <dd><%= @reclamo.servicio %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              reclamos_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_reclamo_path(@reclamo), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              reclamo_path(@reclamo),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
