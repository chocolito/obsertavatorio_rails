<h1>Listing compania</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Cuenta</th>
      <th>Twit</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @compania.each do |companium| %>
      <tr>
        <td><%= companium.nombre %></td>
        <td><%= companium.cuenta %></td>
        <td><%= companium.twit %></td>
        <td><%= link_to 'Show', companium %></td>
        <td><%= link_to 'Edit', edit_companium_path(companium) %></td>
        <td><%= link_to 'Destroy', companium, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

